<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/tre2"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/TxtFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question!!!"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/dp25"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/dp10"
        />
    <TextView
        android:id="@+id/TxtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/dp40"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_margin="@dimen/dp20"
        />
    <TextView
        android:id="@+id/TotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp40"
        android:text="0"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/dp20"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp20"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/TxtNumQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_below="@id/TxtFrame"
        android:layout_centerHorizontal="true"
        android:text="20/30"
        android:textStyle="bold"
        android:textSize="@dimen/dp50"
        />

    <FrameLayout
        android:id="@+id/FrameContent"
        android:layout_below="@id/TxtNumQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp10">

        <Button
            android:id="@+id/volum2"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_gravity="end"
            android:background="@drawable/playmusic"
            />

    </FrameLayout>
</RelativeLayout>